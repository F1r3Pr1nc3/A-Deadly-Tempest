@spyorb_scale = 4
@spyorb_height_pos = 0
@spyorb_side_pos = 0
# TODO grey_tempesttw_spy_orb_01_diffuse

entity = {
	name = "grey_tempesttw_spyorb_part_1_entity"
	pdxmesh = "spyorb_part_1_mesh"
	scale = @spyorb_scale

	default_state = "idle"
	state = { name = "idle" animation = "idle"
		event = { time = 0 node = "light_locator_1" particle = "ship_light_blue_effect" keep_particle = yes trigger_once = yes }
		start_event = { trigger_once = yes sound = { soundeffect = "spy_orb_hum_dome" } }
	}

	meshsettings = {
		name = "spyorb_part_1Shape"
		index = 0
		texture_diffuse = "avian_spy_orb_01_diffuse.dds" # "grey_tempesttw_spy_orb_01_diffuse.dds"
		texture_normal = "avian_spy_orb_01_normal.dds"
		texture_specular = "avian_spy_orb_01_specular.dds"
		shader = "PdxMeshShip"
	}
	game_data = {
		custom_texture = "gfx/models/ships/megastructures/spy_orb/spy_orb_01_construction_fadein.dds"
	}

}

